/* pages/index/index.wxss */
page{
  background: #FFEFD5;
}

/*swiper区域样式*/
/*1-1 swiper组件****************************************/
swiper {
  height: 400rpx;
}
/*1-2 swiper中的图片*/
swiper image {
  width: 100%;
  height: 100%;
}



/* 小游戏 *********************************************************/
.simplegame {
  background: #B24F30;
  height: 300rpx;
  margin: 10rpx 10px;
  margin-top: 20px;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-around;
  align-items: center;
  border-radius:30px;
}
.one-item {
  text-align: center;
  font-size: 28rpx;
  color: #E7AA46;

}

.one-item image {
  background: #FFEFD5;
  width: 90px; 
  height: 100%;
  border-image-repeat: repeat;
  border-radius: 100px;
}




/* 视频瀑布流样式 ************************************************************/
.content {
  background: #FFEFD5;
  display: flex;

  justify-content:space-between;
  padding: 10rpx;
  box-sizing: border-box;

  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: stretch
}

.content-left,.content-right{
  width:47%;
  padding: 10rpx;
}

.content-item{
  margin: 10px  10rpx;
  background:#f3d5a6;
  width: 98%;
  border-radius:20rpx;
  overflow: hidden;
}

.content-item-img{
  width:100%
}

content-item-title{
  /*一行省略 */
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow:hidden
}






