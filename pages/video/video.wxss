/**index.wxss**/
/* 区域1：视频组件样式 */
page{
  background: #FFEFD5;
  padding: 0px;
}
video{
  width:100%;
  padding: 0px;
}

/* 区域2：弹幕控制样式 */
/* 2-1 弹幕区域整体样式 */
.danmuArea{
  padding: 5px;
  display: flex;
  flex-direction: row;
  box-shadow: 7px 7px 7px #ccc;
  background: #B24F30;
}

/* 2-2 文本输入框样式 */
input{
  border: 1rpx solid #987938;
  height: 100rpx;
  flex-grow: 1;
  width: 100%;
  border-radius: 10px;
  color:   #FFEFD5;
}

.play{
  background:  #E7AA46;
  border-radius: 10px;
  border: 1px solid   #FFEFD5;
  padding: 1px 5px;
}

/* 2-3 发送按钮样式 */
.button{
  color:  #FFEFD5;
  background-color:   #E7AA46;
  border: 1px solid #987938;
  width: 50%;
  height: auto;
  align-items: center;
  border-radius: 10px;
  font-size: 20px;
}

/* 区域3：视频列表样式 */
/* 3-1 视频列表区域样式 */
.videoList{
  width: 100%;
  min-height: 400rpx;
}

/* 3-2 单行列表区域样式 */
.videoBar{
  width: 95%;
  display: flex;
  flex-direction: row;
  margin: 10rpx;
  border-bottom: 1rpx solid #987938;
}

/* 3-3 播放图标样式 */
image{
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
}

/* 3-4 文本标题样式 */
text{
  font-size: 45rpx;
  color: #987938;
  margin: 20rpx;
  flex-grow: 1;
}



/* 区域3：评论样式 ******************************************************/
.pinglun{
  width: 100%;
  height: 100%;
  box-shadow: 7px 7px 3px  #ecd5b1;
  border-radius: 20px;
  border-top-left-radius: 0px;
  border-top-right-radius: 0px;
  border: 1px solid #c4c4c4
}

.blanner{
  width: 100%;
  height: 100%;
  box-shadow: 1px 1px 1px #ccc;
  border-radius: 10px;
  border-top-left-radius: 0px;
  border-top-right-radius: 0px;
  border: 1px solid #ffffff;
}

.text{
  float: left;
  padding-left: 0;
  margin: 0;
}

.text-right{
  float: right;
}

.users{
  width: 100%;
  height: auto;
  background: #b64848;
  flex: row;
  justify-content:space-around;
}

.image{
  width: 100%;
  height: 100%;
  float: left;
}

.users-name{
  font-size: 20px;
  align-self: center;
}


.users .users-content{
  float: left;
  border-bottom: 1rpx solid #987938;
}

.users .users-content .users-text{
  font-family: '微软雅黑';
   font-style: normal;
   font-size: 15px; 
   color: #000000; 
}

.users .users-content .pinglun-time{
  font-family: '宋体';
  font-style: normal;
  font-size: 15px; 
  color: #000000; 
  float: right;
}

