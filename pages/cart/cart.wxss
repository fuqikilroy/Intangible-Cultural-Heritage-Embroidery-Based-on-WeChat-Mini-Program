/* pages/cart/cart.wxss */
page{
    background: #FFEFD5; 
    margin: 0rpx 0;
    padding: 0rpx 0rpx;
}

/*
  blanner
*/
.blanner{
  background: #B24F30;
  margin: 0rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0rpx;
  justify-content: space-around;
  height:100%;
  width:100%;
  border-bottom-left-radius: 20%;
  border-bottom-right-radius: 20%;
  justify-content: center;
}
.findbox{
    background: #E7AA46;
    padding: 40rpx 0rpx;
    align-items: center;
    align-self: center;
    align-content: center;
    display: flex;
    flex-direction: column;
    width: 680rpx;
    height: 40rpx;
    border: 1rpx solid  #B24F30;
    box-shadow: 28rpx 24rpx 20rpx #E7AA46;
    border-radius: 20rpx;
    border-width: 2rpx;
}
.inputbox{
  background:  #FFEFD5;
  height:80rpx;
  width:600rpx;
  display: flex;
  flex-direction: row;
  border: 1px solid #000;
  border-radius: 60rpx;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  align-content: stretch;
  transform: translateX(80rpx);
  transform: translateY(-25rpx);
}
.image{
  margin: 0rpx 0;
  display: flex;
  padding: 0 0rpx;
  height:100rpx;
  width:10rpx;
}
input{
  margin: 30rpx 10px;/*上下外边距30rpx*/
  height: 90rpx;/*高度*/
  width: 500rpx;
  font-size: 40rpx;
}
.classify-list{
  margin: 10rpx 30rpx;
  display: flex;
  flex-direction: row-reverse;
  align-items: center;
  padding: 20rpx 0rpx;
  font-size: 35rpx;
  word-spacing: 70rpx;
  transform: translateY(30rpx);
}

/*
   公告 
*/
.adsec{
  width: 90%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  margin: 10rpx auto;
  background:#E7AA46;
  border-radius:6px;
  padding:7rpx 10rpx;
  height: 40rpx;
}
.adsec icon{
  display: flex;
  margin-right:10rpx;
}
.swiper_container {
  height: 55rpx;
  width:80%;
  line-height: 55rpx;
  padding-left: 10rpx;
}

.swiper_item {
  color:  #FFEFD5;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing:2px;
}

/*
  goods
*/
.list{
  width:100%;
  padding:10rpx;
  box-sizing: border-box;
}
.list .item{
  width:47%;
  padding:10rpx;
  box-sizing: border-box;
  float: left;
  background:  #FFEFD5;
  margin:4rpx 1%;
  border-radius: 5%;
}
.list .item .goods_img image{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.list .item .goods_info .goods_name{
  font-size: 28rpx;
  text-align: left;
  line-height: 1.05rem;
  height: 2.1rem;
  font-family: -apple-system, Helvetica, sans-serif;
  overflow: hidden;
  color:#434343;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
}
.list .item .goods_info .goods_price{
  font-style: normal;
  font-family: JDZH-Regular, sans-serif;
  display: inline-block;
  font-size:0.7rem;
  line-height: 1.5rem;
  color:#ff4142;
}
.list .item .goods_info .goods_price text{
  font-size:1rem;
}





